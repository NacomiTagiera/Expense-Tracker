generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TransactionType {
  INCOME  @map("income")
  EXPENSE @map("expense")
}

enum CategoryType {
  INCOME       @map("income")
  EXPENSE      @map("expense")
  INVESTMENT   @map("investment")
  SUBSCRIPTION @map("subscription")
}

enum SubscriptionFrequency {
  DAILY   @map("daily")
  WEEKLY  @map("weekly")
  MONTHLY @map("monthly")
  YEARLY  @map("yearly")
}

enum AccountSharePermission {
  VIEW @map("view")
  EDIT @map("edit")
}

enum AccountShareStatus {
  PENDING  @map("pending")
  ACCEPTED @map("accepted")
  DECLINED @map("declined")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts       Account[]
  ownedAccounts  AccountOwner[]
  sharedAccounts AccountShare[]
  transactions   Transaction[]
  subscriptions  Subscription[]

  @@map("users")
}

model Account {
  id          String   @id @default(cuid())
  name        String
  currency    String   @default("USD")
  balance     Decimal  @default(0) @db.Decimal(18, 2)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId        String
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  owners        AccountOwner[]
  shares        AccountShare[]
  transactions  Transaction[]
  subscriptions Subscription[]
  categories    Category[]

  @@index([userId])
  @@map("accounts")
}

model AccountOwner {
  id        String   @id @default(cuid())
  accountId String
  userId    String
  createdAt DateTime @default(now())

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([accountId, userId])
  @@index([userId])
  @@map("account_owners")
}

model AccountShare {
  id         String                 @id @default(cuid())
  accountId  String
  userId     String
  permission AccountSharePermission @default(VIEW)
  status     AccountShareStatus     @default(PENDING)
  createdAt  DateTime               @default(now())
  updatedAt  DateTime               @updatedAt

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([accountId, userId])
  @@index([userId])
  @@map("account_shares")
}

model Category {
  id        String       @id @default(cuid())
  name      String
  type      CategoryType
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  accountId     String
  account       Account        @relation(fields: [accountId], references: [id], onDelete: Cascade)
  transactions  Transaction[]
  subscriptions Subscription[]

  @@unique([accountId, name, type])
  @@index([accountId, type])
  @@map("categories")
}

model Transaction {
  id          String          @id @default(cuid())
  amount      Decimal         @db.Decimal(18, 2)
  type        TransactionType
  description String?
  date        DateTime        @default(now())
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  accountId      String
  account        Account       @relation(fields: [accountId], references: [id], onDelete: Cascade)
  userId         String
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoryId     String
  category       Category      @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  subscriptionId String?
  subscription   Subscription? @relation(fields: [subscriptionId], references: [id], onDelete: SetNull)

  @@index([accountId])
  @@index([userId])
  @@index([date])
  @@index([categoryId])
  @@index([subscriptionId])
  @@map("transactions")
}

model Subscription {
  id              String                @id @default(cuid())
  name            String
  amount          Decimal               @db.Decimal(18, 2)
  frequency       SubscriptionFrequency
  transactionType TransactionType       @default(EXPENSE)
  description     String?
  startDate       DateTime              @default(now())
  endDate         DateTime?
  isActive        Boolean               @default(true)
  cycleDayOfMonth Int?
  cycleDayOfWeek  Int?
  nextRunAt       DateTime?
  lastRunAt       DateTime?
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt

  accountId    String
  account      Account       @relation(fields: [accountId], references: [id], onDelete: Cascade)
  userId       String
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoryId   String
  category     Category      @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  transactions Transaction[]

  @@index([accountId])
  @@index([userId])
  @@index([categoryId])
  @@map("subscriptions")
}
