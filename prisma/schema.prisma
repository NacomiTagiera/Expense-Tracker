generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TransactionType {
  INCOME  @map("income")
  EXPENSE @map("expense")
}

enum CategoryType {
  INCOME       @map("income")
  EXPENSE      @map("expense")
}

enum RecurringFrequency {
  DAILY   @map("daily")
  WEEKLY  @map("weekly")
  MONTHLY @map("monthly")
  YEARLY  @map("yearly")

  @@map("SubscriptionFrequency")
}

enum WalletSharePermission {
  VIEW @map("view")
  EDIT @map("edit")

  @@map("AccountSharePermission")
}

enum WalletShareStatus {
  PENDING  @map("pending")
  ACCEPTED @map("accepted")
  DECLINED @map("declined")

  @@map("AccountShareStatus")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  wallets               Wallet[]
  ownedWallets          WalletOwner[]
  sharedWallets         WalletShare[]
  transactions          Transaction[]
  recurringTransactions RecurringTransaction[]

  @@map("users")
}

model Wallet {
  id          String   @id @default(cuid())
  name        String
  currency    String   @default("USD")
  balance     Decimal  @default(0) @db.Decimal(18, 2)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId                String
  user                  User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  owners                WalletOwner[]
  shares                WalletShare[]
  transactions          Transaction[]
  recurringTransactions RecurringTransaction[]
  categories            Category[]

  @@index([userId])
  @@map("accounts")
}

model WalletOwner {
  id        String   @id @default(cuid())
  walletId  String   @map("accountId")
  userId    String
  createdAt DateTime @default(now())

  wallet Wallet @relation(fields: [walletId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([walletId, userId], map: "account_owners_accountId_userId_key")
  @@index([userId])
  @@map("account_owners")
}

model WalletShare {
  id         String                @id @default(cuid())
  walletId   String                @map("accountId")
  userId     String
  permission WalletSharePermission @default(VIEW)
  status     WalletShareStatus     @default(PENDING)
  createdAt  DateTime              @default(now())
  updatedAt  DateTime              @updatedAt

  wallet Wallet @relation(fields: [walletId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([walletId, userId], map: "account_shares_accountId_userId_key")
  @@index([userId])
  @@map("account_shares")
}

model Category {
  id        String       @id @default(cuid())
  name      String
  type      CategoryType
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  walletId              String                 @map("accountId")
  wallet                Wallet                 @relation(fields: [walletId], references: [id], onDelete: Cascade)
  transactions          Transaction[]
  recurringTransactions RecurringTransaction[]

  @@unique([walletId, name, type], map: "categories_accountId_name_type_key")
  @@index([walletId, type], map: "categories_accountId_type_idx")
  @@map("categories")
}

model Transaction {
  id          String          @id @default(cuid())
  amount      Decimal         @db.Decimal(18, 2)
  type        TransactionType
  description String?
  date        DateTime        @default(now())
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  walletId               String                @map("accountId")
  wallet                 Wallet                @relation(fields: [walletId], references: [id], onDelete: Cascade)
  userId                 String
  user                   User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoryId             String
  category               Category              @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  recurringTransactionId String?               @map("subscriptionId")
  recurringTransaction   RecurringTransaction? @relation(fields: [recurringTransactionId], references: [id], onDelete: SetNull)

  @@index([walletId], map: "transactions_accountId_idx")
  @@index([userId])
  @@index([date])
  @@index([categoryId])
  @@index([recurringTransactionId], map: "transactions_subscriptionId_idx")
  @@map("transactions")
}

model RecurringTransaction {
  id              String             @id @default(cuid())
  name            String
  amount          Decimal            @db.Decimal(18, 2)
  frequency       RecurringFrequency
  transactionType TransactionType    @default(EXPENSE)
  description     String?
  startDate       DateTime           @default(now())
  endDate         DateTime?
  isActive        Boolean            @default(true)
  cycleDayOfMonth Int?
  cycleDayOfWeek  Int?
  nextRunAt       DateTime?
  lastRunAt       DateTime?
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  walletId     String        @map("accountId")
  wallet       Wallet        @relation(fields: [walletId], references: [id], onDelete: Cascade)
  userId       String
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoryId   String
  category     Category      @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  transactions Transaction[]

  @@index([walletId], map: "subscriptions_accountId_idx")
  @@index([userId], map: "subscriptions_userId_idx")
  @@index([categoryId], map: "subscriptions_categoryId_idx")
  @@map("subscriptions")
}
